<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/recentSearchBTN"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedbutton"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingTop="0dp"
        android:paddingRight="52dp"
        android:paddingBottom="0dp"
        android:text="Tôi thấy hoa vàng trên cỏ xanh"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#B3113F67"
        app:strokeWidth="1dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteRecentSearchBTN"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circlebutton"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="X"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/recentSearchBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recentSearchBTN"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#B3113F67"
        app:strokeWidth="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>