<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundColor"
    tools:context=".AccountInformationFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ReviewerIV"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/Reviewer_nameTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circleAvatar"
        app:srcCompat="@drawable/sampleauthor1"
        tools:src="@drawable/sampleauthor1" />

    <TextView
        android:id="@+id/Reviewer_nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="241dp"
        android:fontFamily="@font/inter_bold"
        android:text="Fela Fela"
        android:textColor="?attr/colorOnBackground"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/ReviewRatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ReviewerIV"
        app:layout_constraintTop_toTopOf="@+id/ReviewerIV" />

    <RatingBar
        android:id="@+id/ReviewRatingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/ReviewerIV"
        app:layout_constraintStart_toEndOf="@+id/ReviewerIV"
        app:layout_constraintTop_toBottomOf="@+id/Reviewer_nameTV">

    </RatingBar>

    <TextView
        android:id="@+id/ReviewRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="212dp"
        android:fontFamily="@font/inter_regular"
        android:text="5.0"
        android:textColor="?attr/colorOnBackground"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/ReviewRatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ReviewRatingBar"
        app:layout_constraintTop_toTopOf="@+id/ReviewRatingBar" />

    <TextView
        android:id="@+id/ReviewTextTV"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/sample_word"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReviewerIV"
        app:layout_constraintVertical_bias="0.421" />

    <View
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="46dp"
        android:background="?attr/colorOnBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReviewTextTV" />

</androidx.constraintlayout.widget.ConstraintLayout>