<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminBookDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/AdminBookDetailBackBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Back" />

            <TextView
                android:id="@+id/AdminBookDetailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="BOOK DETAILS"
                android:textColor="?attr/colorPrimary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/AdminBookTitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Title"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/AdminBookTitleEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:fontFamily="@font/inter_regular"
                android:hint="Book's Title"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnBackground"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/AdminBookAuthorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Author"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/AdminBookAuthorEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:fontFamily="@font/inter_regular"
                android:hint="Book's Author"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnBackground"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/AdminBookDescTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Description"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/AdminBookDescEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:fontFamily="@font/inter_regular"
                android:hint="Book's Description"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnBackground"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/AdminBookTagsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Category"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/AdminBookTagsEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:fontFamily="@font/inter_regular"
                android:hint="Book's Categories"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnBackground"
                android:textSize="16sp" />

            <Button
                android:id="@+id/AdminBookSaveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:text="Save" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>